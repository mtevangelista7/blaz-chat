@page "/"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@inject NavigationManager NavigationManager

<PageTitle>Home</PageTitle>

<MudAppBar Elevation="0" Class="white mt-1" Fixed="false" Dense="true">
    <MudText Color="Color.Primary" Typo="Typo.h4" Class="font-logo logo-animation">Blazchat</MudText>
    <MudSpacer/>
    <MudButton Size="Size.Large" Class="logo-animation" OnClick="OnClickSignUp" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Send" Color="Color.Primary">sign-up</MudButton>
</MudAppBar>

<MudContainer Class="mt-5 rounded-lg custom-container container-animation " MaxWidth="MaxWidth.Large">
    <MudPaper Elevation="0" Height="750px" Width="100%" Style="background: transparent" Class="d-flex align-center justify-center text-container">
        <MudGrid Spacing="0">
            <MudItem xs="12">
                <MudText Typo="Typo.h3" Class="white-text" Align="Align.Center">
                    Blazchat is a simple <b>chat application</b> built with Blazor WebAssembly.
                </MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudContainer>

@code {
    private void OnClickSignUp()
    {
        NavigationManager.NavigateTo("/register");
    }
}